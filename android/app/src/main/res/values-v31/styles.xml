<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Android 12+ Splash Theme -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">

        <!-- Pakai ICON TRANSPARAN, bukan app icon -->
        <item name="android:windowSplashScreenAnimatedIcon">
            @drawable/splash_icon_transparent
        </item>

        <!-- Warna background saat splash Android 12 -->
        <item name="android:windowSplashScreenBackground">@android:color/white</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Theme setelah Flutter jalan -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
